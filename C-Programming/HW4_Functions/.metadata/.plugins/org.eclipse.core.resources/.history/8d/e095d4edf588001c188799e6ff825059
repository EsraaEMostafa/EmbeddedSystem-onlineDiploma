/*C program to reverse a sentence using recursion */

#include <stdio.h>
void Reverse (void);
int main ()
{
	printf("Enter a sentence: ");
	fflush(stdin);fflush(stdout);
	Reverse ();
	return 0 ;
}
void Reverse (void)
{
	char c ;
	scanf("%c",&c);
	while( c != '\n')
	{
		Reverse();
		printf("%c",c);
	}
}
